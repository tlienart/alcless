import { run } from './src/lib/exec.ts';
import { logger } from './src/lib/logger.ts';

async function verify() {
  try {
    const result = await run('whoami', []);
    logger.success(`Block 1 Verified: Current user is ${result.stdout.trim()}`);
  } catch (err: any) {
    logger.error(`Verification failed: ${err.message}`);
    process.exit(1);
  }
}

verify();
